.cart_goods{
 width: 100%;
 background-color: whitesmoke;
 
}
.cart_goods_item{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid pink;
  padding: 30rpx 5rpx;
  background-color: white;
}
.a{
  display: flex;
  align-items: center;
}
.a .checkbox .wx-checkbox-input{
  border-radius: 50%;
}
.a .checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border-radius: 50%;
  color: white;
  background-color:#ff5777;
}
.b{
  width: 85%;
  display: flex;
  flex-direction: row;
}

.cart_goods_item .image{
  height: 200rpx;
  width: 130rpx;
}
.cart_goods_text{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  width: 75%;
}

.cart_goods_item .cart_goods_name{
  font-size: 28rpx;
  width: 100%;
}
.cart_goods_item .cart_goods_spc{
  width: 100%;
  font-size: 25rpx;
  color: gray;
  margin-top: 10rpx;
}
.cart_goods_item .cart_goods_num{
  margin-top: 35rpx;
  font-size: 40rpx;
  color: red;
}
.cart_goods_p_r{
  width: 16%;
  display: flex;
  flex-direction: column;
}
.price{
  font-size: 35rpx;
  color: red;
  margin-left: 10rpx;
}

.delete{
  margin-top: 100rpx;
}


/* 底部付款 */
.footer{
  bottom: 0;
  position: fixed;
  width: 100%;
  height: 120rpx;
  display: flex;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-top: 2rpx solid pink;
}
.footer .footer_allprice{
  width: 40%;
  text-align: center;
  height: 90rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.footer_allprice .k{
  font-size:40rpx;
}
.footer_allprice .l{
  font-size: 55rpx;
  color: red;
}

.footer .topay{
  width: 40%;
  text-align: center;
  height: 90rpx;
  padding-top: 30rpx;
  background-color: red;
  color: white;
}


